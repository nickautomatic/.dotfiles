[alias]
  a = add
  amend = commit --amend
  ap = add -p
  b = branch
  br = for-each-ref --sort=-committerdate refs/heads --format='%(HEAD) %(color:yellow)%(refname:short)  %(color:bold green)%(committerdate:relative)  %(color:blue)%(subject)  %(color:magenta)%(authorname)%(color:reset)'
  ch = checkout
  c = commit
  cm = commit -m
  co = checkout
  cv = commit -v
  d = diff
  ds = diff --staged
  f = fetch --all
  l = log -n 15 --graph --date-order --date=relative --pretty='format:%C(red)%h%C(reset)%C(auto)%d%C(reset) %s %C(green)(%cr) %C(yellow) %an %C(reset)'
  m = merge
  rb = rebase
  rbi = rebase -i
  rs = reset
  s = status
  sh = show
  st = status
  wip = "!git add . && git commit --no-verify -m 'WIP'"
[commit]
  verbose = true
[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
  rebase = preserve
[push]
  default = simple
[rebase]
  autosquash = true
